<?xml version="1.0" encoding="utf-8"?>
<com.github.petropavel13.twophoto.views.RetryView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/retry_view_failed_to_load_content"
        android:id="@+id/retry_view_text_view" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/retry_view_refresh_button"
        android:src="@drawable/ic_refresh_white_48dp"
        android:layout_gravity="center_horizontal" />

</com.github.petropavel13.twophoto.views.RetryView>